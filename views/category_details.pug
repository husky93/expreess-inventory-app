extends layout

block content
  div(class='wrapper')
    h1= title
    p.cat_desc= category.description
    section(class='category_content')
      ul(class='items_list')
        each item in category_items
          li.item
            a(href=item.url)= item.name
            p(class='price') Price: #{item.price}$
      div.button-ui
        a(href=`/categories/delete/${category._id}`)
          button Delete Category
        a(href=`/categories/update/${category._id}`)
          button Update Category